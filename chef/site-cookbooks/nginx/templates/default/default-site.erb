server {
  listen      80;
  server_name _;
  
  access_log  /var/log/nginx/access.log;
  error_log   /var/log/nginx/error.log;
  rewrite_log on;

  location /sleep1 {
    echo_sleep 1;
    echo 'SLEEP 1s OK';
  } 

  location /sleep3 {
    echo_sleep 3;
    echo 'SLEEP 3s OK';
  } 

  location /sleep5 {
    echo_sleep 5;
    echo 'SLEEP 5s OK';
  } 

}